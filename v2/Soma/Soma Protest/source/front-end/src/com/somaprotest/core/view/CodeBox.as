package com.somaprotest.core.view {		import fl.containers.ScrollPane;		import com.soma.view.SomaText;		import com.soundstep.ui.layouts.CanvasUI;	
	/**	 * <b>Author:</b> Romuald Quantin - <a href="http://www.soundstep.com/" target="_blank">www.soundstep.com</a><br />	 * <b>Company:</b> Less Rain - <a href="http://www.lessrain.com/" target="_blank">www.lessrain.com</a><br />	 * <b>Class version:</b> 1.0<br />	 * <b>Actionscript version:</b> 3.0<br />	 * <b>Copyright:</b> 	 * <br />	 * <b>Date:</b> 30 Nov 2008<br />	 * <b>Usage:</b>	 * @example	 * <listing version="3.0"></listing>	 */		public class CodeBox extends CanvasUI {
		//------------------------------------		// private, protected properties		//------------------------------------				private var _codeField:SomaText;
		//------------------------------------		// public properties		//------------------------------------								//------------------------------------		// constructor		//------------------------------------				public function CodeBox(widthLayout:Number = 100, heightLayout:Number = 100, layoutScrollbar:Boolean = true, layoutMask:Boolean = true) {			super(widthLayout, heightLayout, layoutScrollbar, layoutMask);			init();			createCodeField();		}				private function init():void {			canvasColor = 0xFFFFFF;			canvasAlpha = .7;			ScrollPane(scrollPane).mouseFocusEnabled = false;		}				private function createCodeField():void {			_codeField = new SomaText("", "codeBox");			_codeField.x = 5;			_codeField.selectable = true;			_codeField.condenseWhite = false;			addChild(_codeField);		}		//		// PRIVATE, PROTECTED		//________________________________________________________________________________________________								// PUBLIC		//________________________________________________________________________________________________				public function addCodeLine(code:String):void {			_codeField.htmlText += code + "<br/>";		}			}}